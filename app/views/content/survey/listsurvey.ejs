<div class="container">
    <h1><%=title %></h1>
    <!-- <a href="/survey-create" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Create a Survey
    </a> -->
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Begin</th>
                        <th scope="col">Ends</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="surveyList">
                    <% for(let count=0; count < surveys.length; count++) { %>                   
                        <tr>
                            <td scope="row" class="text-center"></td>
                            <td><%= surveys[count].quiz %></td>
                            <td><%= surveys[count].lifeline %></td>
                            <td><%= surveys[count].endsAt %></td>
                            <td class="text-center col-1">
                                <a class="btn btn-primary" href="/survey-edit/<%= surveys[count].id %>">
                                    Edit
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a class="btn btn-warning" href="/survey-delete/<%= surveys[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>