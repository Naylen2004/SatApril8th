<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Create Survey Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="./content/form.css">
</head>
<body>
    <%- include('../../components/header.ejs') %>
    <!--  <% include('../../components/header', { username: username }) %> -->
    <h1>Create Survey Form</h1>
    <form method="post" action="/submit">
        <label for="quiz">Topic:</label>
        <input type="text" id="quiz" name="quiz" required>

        <hr>

        <% for(let i=0; i<5; i++){ %>
            <div>
                <label for="questions[<%= i %>][question]">Question <%= i+1 %>:</label>
                <input type="text" id="questions[<%= i %>][question]" name="questions[<%= i %>][question]" required>

                <% for (let j = 0; j < 3; j++) { %>
                    <div>
                        <!--<input type="radio" id="questions[<%= i %>][options][<%= j %>]" name="questions[<%= i %>][options]" value="<%= j %>" required> -->
                        <label for="questions[<%= i %>][options][<%= j %>]">Option <%= j+1 %>:</label>
                        <!-- <input type="text" id="questions[<%= i %>][options][<%= j %>]" name="questions[<%= i %>][options][<%= j %>]" required>  -->
                        <input type="text" id="questions[<%= i %>][options][<%= j %>]" name="questions[<%= i %>][options][<%= j %>]">
                    </div>
                <% } %>
            </div>
            <hr>
        <% } %>

        <label for="startsAt">Starts At:</label>
        <input type="datetime-local" id="startsAt" name="lifeline[startsAt]" required>

        <label for="endsAt">Ends At:</label>
        <input type="datetime-local" id="endsAt" name="lifeline[endsAt]" required>

      <input type="submit" value="Submit"> 
    </form>
   
    <button class="survey-button" type="button" onclick="location.href='./viewsurvey'">View Results</button>
</div>
   
    
</body>
</html>
